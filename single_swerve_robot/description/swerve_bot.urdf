<?xml version="1.0"?>
<robot name="swerve_bot" xmlns:xacro="http://ros.org/wiki/xacro">

  <!-- Define steering/wheel xacro -->
  <xacro:macro name="swerve_module" params="prefix x y">

    <!-- Swivel -->
    <link name="${prefix}_swivel_link">
      <visual>
        <geometry>
          <mesh filename="package://single_swerve_robot/meshes/Swivel.STL"/>
        </geometry>
        <material name="Yellow">
          <color rgba="1.0 1.0 0 1.0"/>
        </material>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://single_swerve_robot/meshes/Swivel.STL"/>
        </geometry>
      </collision>
      <inertial>
        <mass value="0.123"/>
        <inertia ixx="0.000079" ixy="0.0" ixz="0.0" iyy="0.000053" iyz="0.0" izz="0.000083"/>
      </inertial>
    </link>

    <joint name="${prefix}_steering_joint" type="revolute">
      <parent link="base_link"/>
      <child link="${prefix}_swivel_link"/>
      <origin xyz="${x} ${y} 0.0656" rpy="0 0 0"/>
      <axis xyz="0 0 1"/>
      <limit velocity="100" effort="9999.0" lower="${-pi*6.0}" upper="${pi*6.0}"/>
    </joint>

    <!-- Wheel -->
    <link name="${prefix}_wheel_link">
      <visual>
        <geometry>
          <mesh filename="package://single_swerve_robot/meshes/Wheel.STL"/>
        </geometry>
        <material name="Blue">
          <color rgba="0 0 1.0 1.0"/>
        </material>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://single_swerve_robot/meshes/Wheel.STL"/>
        </geometry>
      </collision>
      <inertial>
        <mass value="0.133"/>
        <inertia ixx="0.000056" ixy="0.0" ixz="0.0" iyy="0.000097" iyz="0.0" izz="0.000056"/>
      </inertial>
    </link>

    <joint name="${prefix}_wheel_joint" type="continuous">
      <parent link="${prefix}_swivel_link"/>
      <child link="${prefix}_wheel_link"/>
      <origin xyz="0.0 0.0 -0.0275" rpy="0 0 0"/>
      <axis xyz="0 1 0"/>
      <limit velocity="100" effort="9999.0"/>
    </joint>

  </xacro:macro>

  <!-- Robot configuration start from this point--> 

  <!-- Robot base-->
  <link name="base_link">
    <visual>
      <geometry>
        <mesh filename="package://single_swerve_robot/meshes/Frame.STL"/>
      </geometry>
      <material name="Cyan">
        <color rgba="0 1.0 1.0 1.0"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <mesh filename="package://single_swerve_robot/meshes/Frame.STL"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="6.25"/> 
      <inertia ixx="0.0845" ixy="0.0" ixz="0.0" iyy="0.1885" iyz="0.0" izz="0.27"/>
    </inertial>
  </link>

  <!-- Robot Footprint -->
  <link name="base_footprint">
  </link>

  <joint name="base_joint" type="fixed">
    <parent link="base_footprint"/>
    <child link="base_link"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </joint>


  <!-- Use the xacro to create all the steering and wheels -->
  <xacro:swerve_module prefix="fl" x="0.2555"  y="0.1555"/>


  <xacro:swerve_module prefix="fr" x="0.2555"  y="-0.1555"/>


  <xacro:swerve_module prefix="rl" x="-0.2555"  y="0.1555"/>


  <xacro:swerve_module prefix="rr" x="-0.2555"  y="-0.1555"/>


  <link name="imu_link">
    <visual>
      <geometry>
        <box size="0.01 0.01 0.01"/>
      </geometry>
    </visual>
    <inertial>
      <mass value="0.01"/>
      <inertia ixx="0.000056" ixy="0.0" ixz="0.0" iyy="0.000097" iyz="0.0" izz="0.000056"/>
    </inertial>
  </link>

  <joint name="imu_joint" type="fixed">
    <parent link="base_link"/>
    <child link="imu_link"/>
    <origin xyz="0 0 0.1206"/>
  </joint>

  <link name="lidar_link">
    <inertial>
      <mass value="0.01"/>
      <inertia ixx="0.000056" ixy="0.0" ixz="0.0" iyy="0.000097" iyz="0.0" izz="0.000056"/>
    </inertial>
    <visual>
      <geometry>
        <mesh filename="package://single_swerve_robot/meshes/Lidar.STL"/>
      </geometry>
      <material name="Blue">
        <color rgba="0 0 1.0 1.0"/>
      </material>
    </visual>
  </link>

  <joint name="lidar_joint" type="fixed">
    <parent link="base_link"/>
    <child link="lidar_link"/>
    <origin xyz="0.2555 0 0.1156" rpy="0 0 0"/>
  </joint>

  <!-- ROS2 Control -->

  <ros2_control name="swerve_drive_controller" type="system" is_async="true">
    <hardware>
      <plugin>gz_ros2_control/GazeboSimSystem</plugin>
    </hardware>
    <joint name="fl_steering_joint">
      <command_interface name="position"/>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
      <state_interface name="effort"/>
    </joint>
    <joint name="fr_steering_joint">
      <command_interface name="position"/>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
      <state_interface name="effort"/>
    </joint>
    <joint name="rl_steering_joint">
      <command_interface name="position"/>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
      <state_interface name="effort"/>
    </joint>
    <joint name="rr_steering_joint">
      <command_interface name="position"/>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
      <state_interface name="effort"/>
    </joint>
    <joint name="fl_wheel_joint">
      <command_interface name="velocity"/>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
      <state_interface name="effort"/>
    </joint>
    <joint name="fr_wheel_joint">
      <command_interface name="velocity"/>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
      <state_interface name="effort"/>
    </joint>
    <joint name="rl_wheel_joint">
      <command_interface name="velocity"/>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
      <state_interface name="effort"/>
    </joint>
    <joint name="rr_wheel_joint">
      <command_interface name="velocity"/>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
      <state_interface name="effort"/>
    </joint>
  </ros2_control>

  <!-- Gazebo -->

  <gazebo reference="lidar_link">
    <sensor name="lidar" type="gpu_lidar">
      <always_on>true</always_on>
      <visualize>true</visualize>
      <update_rate>5</update_rate>
      <topic>scan</topic>
      <gz_frame_id>lidar_link</gz_frame_id>
      <ray>
        <scan>
          <horizontal>
            <samples>360</samples>
            <resolution>1.000000</resolution>
            <min_angle>-1.5708</min_angle>
            <max_angle>1.5708</max_angle>
          </horizontal>
        </scan>
        <range>
          <min>0.10</min>
          <max>12.0</max>
          <resolution>0.01000</resolution>
        </range>
        <noise>
          <type>gaussian</type>
          <mean>0.0</mean>
          <stddev>0.01</stddev>
        </noise>
      </ray>
    </sensor>
  </gazebo>

  <gazebo reference="imu_link">
    <sensor name="imu_sensor" type="imu">
      <always_on>true</always_on>
      <update_rate>100</update_rate>
      <visualize>true</visualize>
      <topic>imu</topic>
      <gz_frame_id>imu_link</gz_frame_id>
      <imu>
        <angular_velocity>
          <x>
            <noise type="gaussian">
              <mean>0.0</mean>
              <stddev>2e-4</stddev>
              <bias_mean>0.0000075</bias_mean>
              <bias_stddev>0.0000008</bias_stddev>
            </noise>
          </x>
          <y>
            <noise type="gaussian">
              <mean>0.0</mean>
              <stddev>2e-4</stddev>
              <bias_mean>0.0000075</bias_mean>
              <bias_stddev>0.0000008</bias_stddev>
            </noise>
          </y>
          <z>
            <noise type="gaussian">
              <mean>0.0</mean>
              <stddev>2e-4</stddev>
              <bias_mean>0.0000075</bias_mean>
              <bias_stddev>0.0000008</bias_stddev>
            </noise>
          </z>
        </angular_velocity>
        <linear_acceleration>
          <x>
            <noise type="gaussian">
              <mean>0.0</mean>
              <stddev>1.7e-2</stddev>
              <bias_mean>0.1</bias_mean>
              <bias_stddev>0.001</bias_stddev>
            </noise>
          </x>
          <y>
            <noise type="gaussian">
              <mean>0.0</mean>
              <stddev>1.7e-2</stddev>
              <bias_mean>0.1</bias_mean>
              <bias_stddev>0.001</bias_stddev>
            </noise>
          </y>
          <z>
            <noise type="gaussian">
              <mean>0.0</mean>
              <stddev>1.7e-2</stddev>
              <bias_mean>0.1</bias_mean>
              <bias_stddev>0.001</bias_stddev>
            </noise>
          </z>
        </linear_acceleration>
      </imu>
    </sensor>
  </gazebo>


  <gazebo>
    <plugin filename="gz_ros2_control-system" name="gz_ros2_control::GazeboSimROS2ControlPlugin">
      <parameters>$(find single_swerve_robot)/config/swerve_drive_controllers_params.yaml</parameters>
    </plugin>
  </gazebo>

</robot>


